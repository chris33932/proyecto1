{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ofertum</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ofertum.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ ofertum.nombre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ ofertum.slug }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ ofertum.descripcion }}</td>
            </tr>
            <tr>
                <th>Condiciones</th>
                <td>{{ ofertum.condiciones }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ ofertum.foto }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ ofertum.precio }}</td>
            </tr>
            <tr>
                <th>Descuento</th>
                <td>{{ ofertum.descuento }}</td>
            </tr>
            <tr>
                <th>Fechapublicacion</th>
                <td>{% if ofertum.fechaPublicacion %}{{ ofertum.fechaPublicacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechaexpiracion</th>
                <td>{% if ofertum.fechaExpiracion %}{{ ofertum.fechaExpiracion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Compras</th>
                <td>{{ ofertum.compras }}</td>
            </tr>
            <tr>
                <th>Umbral</th>
                <td>{{ ofertum.umbral }}</td>
            </tr>
            <tr>
                <th>Revisada</th>
                <td>{% if ofertum.revisada %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('oferta_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('oferta_edit', { 'id': ofertum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
